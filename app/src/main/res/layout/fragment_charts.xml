<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        >


        <ImageButton
            android:id="@+id/buttonDelete"
            style="@style/ActionIcon"
            android:contentDescription="@string/dashboard_charts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/noteInputLayout"
            app:layout_constraintTop_toTopOf="@id/noteInputLayout"
            app:srcCompat="@drawable/ic_clear"
            android:tint="#5C5C5C"
            android:visibility="gone"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/charts_recycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="24dp"
            android:background="@android:color/white"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/noteInputLayout"
            tools:listitem="@layout/item_charts" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addNoteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:focusableInTouchMode="true"
            android:tint="@color/white"
            app:backgroundTint="?attr/colorPrimary"
            app:elevation="7dp"
            app:fabSize="normal"
            app:layout_behavior="org.dhis2.utils.FixedBottomViewBehavior"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_add_accent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>