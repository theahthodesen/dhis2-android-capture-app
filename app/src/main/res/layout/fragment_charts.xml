<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
       >

        <LinearLayout
            android:paddingTop="2dp"
            android:paddingEnd="2dp"
            android:id="@+id/chartButtonLayout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            >
            <Button
                android:id="@+id/heightforage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="11sp"
                android:text="@string/height_for_age" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#fff" />
            <Button
                android:id="@+id/weightforage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="11sp"
                android:text="@string/weight_for_age" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#fff" />
            <Button
                android:id="@+id/weightforheight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="11sp"
                android:text="@string/weight_for_height" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/tei_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/chartButtonLayout"
            app:cardElevation="4dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/incident_date_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/rubik_medium"
                    android:text="Date of last data entry:"
                    android:textColor="@color/text_black_4d4d4d"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Date of last data entry:" />

                <TextView
                    android:id="@+id/incident_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/rubik_medium"
                    android:gravity="end"
                    android:textColor="@color/text_black_4d4d4d"
                    android:textSize="12sp"
                    android:text="Date of last data entry:"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/incident_date_label"
                    tools:text="DD/MM/YYYY" />

                <TextView
                    android:id="@+id/enrollment_date_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/rubik_medium"
                    android:text="Days since last data entry:"
                    android:textColor="@color/text_black_4d4d4d"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/incident_date_label"
                    tools:text="Days since last data entry:" />

                <TextView
                    android:id="@+id/enrollment_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/rubik_medium"
                    android:gravity="end"
                    android:textColor="@color/text_black_4d4d4d"
                    android:textSize="12sp"
                    android:text="Date of last data entry:"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/enrollment_date_label"
                    tools:text="123" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


        <androidx.recyclerview.widget.RecyclerView
            android:paddingHorizontal="2dp"
            android:paddingEnd="2dp"
            android:id="@+id/charts_recycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="0dp"
            android:background="@android:color/white"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tei_data"
            tools:listitem="@layout/item_charts" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addChartButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:tint="@color/white"
            app:backgroundTint="?attr/colorPrimary"
            app:elevation="7dp"
            app:fabSize="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_add_accent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>